<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/margin_10dp"
        app:cardElevation="@dimen/margin_4dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.quintus.labs.grocerystore.customfonts.MyTextViewMeriendaRegular
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Order Id:"
                        android:layout_marginRight="8dp"
                        android:textSize="18dp"
                        android:textStyle="bold"></com.quintus.labs.grocerystore.customfonts.MyTextViewMeriendaRegular>

                <com.quintus.labs.grocerystore.customfonts.MyTextViewMeriendaRegular
                    android:id="@+id/order_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="order#213444234"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="6dp"
                    android:background="@color/borderColor" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.quintus.labs.grocerystore.customfonts.MyTextViewMeriendaRegular
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Order date and time:"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="8dp"
                        android:textSize="14dp"
                        android:textStyle="bold"></com.quintus.labs.grocerystore.customfonts.MyTextViewMeriendaRegular>

                    <com.quintus.labs.grocerystore.customfonts.MyTextViewMeriendaRegular
                    android:id="@+id/date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_10dp"
                    android:text="12/04/2018"
                    android:textSize="14dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.quintus.labs.grocerystore.customfonts.MyTextViewMeriendaRegular
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Order Total:"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="8dp"
                        android:textSize="14dp"
                        android:textStyle="bold"></com.quintus.labs.grocerystore.customfonts.MyTextViewMeriendaRegular>

                    <com.quintus.labs.grocerystore.customfonts.MyTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="2dp"
                        android:layout_marginTop="@dimen/margin_10dp"
                        android:text="Rs." />

                <com.quintus.labs.grocerystore.customfonts.MyTextView
                    android:id="@+id/total_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_10dp"
                    android:text="Rs.500.00" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.quintus.labs.grocerystore.customfonts.MyTextViewMeriendaRegular
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Order Status:"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="8dp"
                        android:textSize="14dp"
                        android:textStyle="bold"></com.quintus.labs.grocerystore.customfonts.MyTextViewMeriendaRegular>

                <com.quintus.labs.grocerystore.customfonts.MyTextView
                    android:id="@+id/status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_10dp"
                    android:text="pending" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>